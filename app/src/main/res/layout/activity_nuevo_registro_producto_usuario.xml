<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoRegistroProductoUsuarioActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/doscolores"
        android:elevation="3dp">

        <Button
            android:id="@+id/btnBackRegistroProductoHorario"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_action_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/bevan"
            android:text="BrLife"
            android:textColor="@color/blanco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/tvNombreProductoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:text="NECTAR COLUN"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvSaborRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Sabor durazno " />

    <TextView
        android:id="@+id/tvMarcaRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Sabor durazno " />
    <View android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:background="#000000"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario comida: " />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/formatospinner"
            >

            <Spinner
                android:id="@+id/spHorarioComidaRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/formatotablanutricional">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:text="1 Porcion"
                android:textAlignment="textEnd" />
        </LinearLayout>
        <View android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#000000"
            />

        <ListView
            android:id="@+id/lvNutrientesRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcion: " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/formatospinner">

            <EditText
                android:id="@+id/etPorcionRegistro"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@null"
                />

            <Spinner
                android:id="@+id/spPorcionRegistro"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <Button
            android:id="@+id/btnAgregarRegistro"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawableRight="@drawable/ic_action_add"
            android:text="agregar"
            android:textColor="@color/blanco" />
    </LinearLayout>

</LinearLayout>